<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
      android:background="@drawable/background"
    >
  
<LinearLayout
     android:id="@+id/MemPicLayout"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_background">
      <QuickContactBadge
        android:id="@+id/mem_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:src="@drawable/user_pic"
       />
      
      
    <TextView
        android:id="@+id/mem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:text="Jagath Sumanapala"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      

    <Button
        android:id="@+id/payment_button"
        android:textColor="#F0EEF1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/book_button"
        android:text="Make Payment" />
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>
    
 <ScrollView
 android:id="@+id/mainScrollView"         
 android:layout_width="fill_parent" 
 android:layout_height="wrap_content"
 android:layout_below="@+id/MemPicLayout"
>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
<LinearLayout
     android:id="@+id/mem_id_layout"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_background">
    
    <TextView
        android:id="@+id/mem_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3CB6F2"
        android:text="Member ID"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/mem_id_label"
        android:background="#3CB6F2" />
    
    <TextView
        android:id="@+id/mem_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:textColor="#ffffff"
        android:text="Member id will be displayed" />
    
       <TextView
        android:id="@+id/group_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#3CB6F2"
        android:text="Group ID"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <View
        android:id="@+id/divider4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#3CB6F2" />
     <RelativeLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
          >
     <TextView
        android:id="@+id/group_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:layout_marginRight="15dp"
       android:paddingRight="15dp"
         android:textColor="#ffffff"
         android:textSize="15sp"
        android:text="Group ID will be displayed here" />
     </RelativeLayout>
     
       <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#3CB6F2"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <View
        android:id="@+id/divider5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/address_label"
        android:background="#3CB6F2" />
     <RelativeLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
          >
     <TextView
        android:id="@+id/address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:layout_marginRight="15dp"
       android:paddingRight="15dp"
         android:textColor="#ffffff"
         android:textSize="15sp"
        android:text="Address will be displayed here" />
     
     </RelativeLayout>
     
            <TextView
        android:id="@+id/telephone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#3CB6F2"
        android:text="Telephone"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <View
        android:id="@+id/divider6"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/address_label"
        android:background="#3CB6F2" />
     <RelativeLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
          >
     <TextView
        android:id="@+id/telephone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:paddingRight="15dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:autoLink="all"
        android:phoneNumber="true"
        android:text="0777200824" />
     
     </RelativeLayout>


</LinearLayout>    
<LinearLayout
     android:id="@+id/due_details_layout"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mem_id_layout"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_background">
    
    <TextView
        android:id="@+id/due_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3CB6F2"
        android:text="Due Amount"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/due_amount_label"
        android:background="#3CB6F2" />
     
       <RelativeLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
          >
    
    <TextView
        android:id="@+id/due_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:text="Rs:3000" 
        android:layout_centerVertical="true"
        />
    
     
     

    </RelativeLayout>
     <TextView
        android:id="@+id/due_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#3CB6F2"
        android:text="Due Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/due_date_label"
        android:background="#3CB6F2" />
     <RelativeLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
          >
     <TextView
        android:id="@+id/due_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:layout_marginRight="15dp"
       android:paddingRight="15dp"
         android:textColor="#ffffff"
         android:textSize="15sp"
        android:text="2015/08/20" />

     </RelativeLayout>
     
</LinearLayout>    
</RelativeLayout>
</ScrollView>
    
 
 
 </RelativeLayout>