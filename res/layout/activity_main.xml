<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.microfinance.MainActivity"
    android:background="@drawable/background"
     >
    
    <LinearLayout
            android:id="@+id/main_panel"
   			android:layout_width="match_parent"
   			android:layout_height="fill_parent"
  			android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
 			android:weightSum="3"
 			android:background="@drawable/card_background"
         >
        
        <RelativeLayout
   			 android:id="@+id/payment_layout"
   			 android:layout_width="match_parent"
  			  android:layout_height="0dp"
  			   android:layout_weight="1"
    >
	<ImageView
    android:id="@+id/payment_icon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="22dp"
    android:src="@drawable/home" />
    
    <TextView
        android:id="@+id/payment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/payment_icon"
        android:textColor="#ffffff"
        android:fontFamily="FF Strada OT"
        android:text="Accept Payment"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

             <RelativeLayout
   				 android:id="@+id/group_layout"
   				 android:layout_width="match_parent"
   				 android:layout_height="0dp"
  				  android:layout_weight="1"
    ><ImageView
    android:id="@+id/group_icon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="22dp"
    android:src="@drawable/calendar" />
    

    
    <TextView
        android:id="@+id/group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/group_icon"
        android:textColor="#ffffff"
        android:fontFamily="FF Strada OT"
        android:text="Groups"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

                  <RelativeLayout
    android:id="@+id/member_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    
    android:layout_weight="1"
    >
	    <ImageView
    android:id="@+id/member_icon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="22dp"
    android:src="@drawable/user" />
    
    <TextView
        android:id="@+id/member_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
          android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/member_icon"
        android:textColor="#ffffff"
        android:fontFamily="FF Strada OT"
        android:text="Members"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
        
    </LinearLayout>

</RelativeLayout>
